<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/text_mssv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20170000"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/text_hoten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tester"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/text_ngay_sinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11-11-2000"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tester@gmail.com"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/text_dia_chi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dia chi hien tai"
        android:textSize="24sp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Trở về"
        android:id="@+id/btn_troVe"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

